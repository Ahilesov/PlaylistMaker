<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayoutApp"
    android:background="?attr/colorPrimary"
    android:paddingBottom="@dimen/frame_28dp">


    <TextView
        android:id="@+id/text"
        style="@style/TextScreenNameApp"
        android:text="@string/app_name" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/frame_40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            style="@style/ButtonApp"
            android:text="@string/button_search"
            app:icon="@drawable/search" />

        <Button
            android:id="@+id/button_media"
            style="@style/ButtonApp"
            android:layout_marginTop="@dimen/frame_16dp"
            android:text="@string/button_media"
            app:icon="@drawable/media" />


        <Button
            android:id="@+id/button_settings"
            style="@style/ButtonApp"
            android:layout_marginTop="@dimen/frame_16dp"
            android:text="@string/button_settings"
            app:icon="@drawable/settings" />

    </LinearLayout>


</LinearLayout>