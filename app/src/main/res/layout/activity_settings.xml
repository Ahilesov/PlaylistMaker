<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/frame_16dp"
        android:layout_marginTop="@dimen/frame_14dp"
        android:layout_marginRight="@dimen/frame_16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/frame_28dp"
            android:fontFamily="@font/yandex_sans_text_medium"
            android:text="@string/settings_name"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_22" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_61dp"
        android:layout_marginLeft="@dimen/frame_16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/frame_16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:fontFamily="@font/yandex_sans_text_regular"
            android:text="@string/dark_theme"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_16" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_61dp"
        android:layout_marginLeft="@dimen/frame_16dp"
        android:layout_marginRight="@dimen/frame_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:fontFamily="@font/yandex_sans_text_regular"
            android:text="@string/share_app"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/share" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_61dp"
        android:layout_marginLeft="@dimen/frame_16dp"
        android:layout_marginRight="@dimen/frame_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:fontFamily="@font/yandex_sans_text_regular"
            android:text="@string/support"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/support" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_61dp"
        android:layout_marginLeft="@dimen/frame_16dp"
        android:layout_marginRight="@dimen/frame_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:fontFamily="@font/yandex_sans_text_regular"
            android:text="@string/user_agreement"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/agreement" />

    </FrameLayout>


</LinearLayout>
